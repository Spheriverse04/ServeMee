{
  "name": "servemee",
  "version": "1.0.0",
  "description": "Lightning Fast Service Delivery Platform",
  "scripts": {
    "dev": "./scripts/start-dev.sh",
    "setup": "./setup.sh",
    "setup:firebase": "./scripts/setup-firebase.sh",
    "backend:dev": "cd backend && npm run start:dev",
    "frontend:dev": "cd frontend && npm run dev",
    "backend:build": "cd backend && npm run build",
    "frontend:build": "cd frontend && npm run build",
    "backend:start": "cd backend && npm run start:prod",
    "frontend:start": "cd frontend && npm start",
    "migration:run": "cd backend && npm run migration:run",
    "migration:generate": "cd backend && npm run migration:generate",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules backend/dist frontend/.next",
    "lint": "cd backend && npm run lint && cd ../frontend && npm run lint",
    "test": "cd backend && npm run test"
  },
  "keywords": [
    "service-marketplace",
    "local-services",
    "nextjs",
    "nestjs",
    "typescript",
    "firebase",
    "postgresql"
  ],
  "author": "ServeMee Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}